<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppScreens.Settings">

    <TextView
        android:id="@+id/placeholderSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where Settings will go, drag for notification rate?, date format"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="201dp" />

    <CheckBox
        android:id="@+id/addExpiredFoodToShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expired Food to Shopping List"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="220dp" />

    <Button
        android:id="@+id/settingsOpenFeedbackPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="267dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="#0090FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppScreens.MainMenuPlaceholder">

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="308dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/button_layout"
        android:drawableTop="@drawable/ic_notes"
        android:text="@string/placeholder_menu_add_item"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/viewShoppingListButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewPantryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/button_layout"
        android:drawableTop="@drawable/ic_food"
        android:text="@string/placeholder_menu_view_pantry"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/viewSettingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addItemButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button_layout"
        android:drawableTop="@drawable/ic_settings"
        android:text="@string/placeholder_menu_view_settings"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewShoppingListButton"
        app:layout_constraintTop_toBottomOf="@+id/viewPantryButton" />

    <Button
        android:id="@+id/viewShoppingListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button_layout"
        android:drawableTop="@drawable/ic_checklist"
        android:text="Shopping List"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addItemButton" />

    <include layout="@layout/layout_bottom_navigation_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour"
    tools:context=".AppScreens.MainMenuPlaceholder">

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/button_layout"
        android:drawableTop="@drawable/ic_notes"
        android:text="@string/placeholder_menu_add_item"
        android:textColor="@color/text_colour"
        android:textColorHighlight="@color/highlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/viewPantryButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_layout"
        android:drawableTop="@drawable/ic_food"
        android:text="@string/placeholder_menu_view_pantry"
        android:textColor="@color/text_colour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/viewSettingsButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/button_layout"
        android:drawableTop="@drawable/ic_settings"
        android:text="@string/placeholder_menu_view_settings"
        android:textColor="@color/text_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addItemButton" />

    <Button
        android:id="@+id/viewShoppingListButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_layout"
        android:drawableTop="@drawable/ic_checklist"
        android:text="Shopping List"
        android:textColor="@color/text_colour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPantryButton" />

    <include layout="@layout/layout_bottom_navigation_view" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Waste-Less"
        android:textAllCaps="false"
        android:textColor="#333333"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have 3 items about to go to waste!"
        android:textColor="#D7635E"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>